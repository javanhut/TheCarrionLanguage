// Simple test of string indexing without grimoire dependencies
s = "hello world"

print("String: " + s)
print("Length: " + str(len(s)))
print("s[0] = " + s[0])
print("s[1] = " + s[1])
print("s[6] = " + s[6])

// Test negative indices
print("Negative indices:")
print("s[-1] = " + s[-1])  // Last character
print("s[-2] = " + s[-2])  // Second to last

// Test recursive string reversal function
spell reverse_string(s, index):
    if index < 0:
        return ""
    return s[index] + reverse_string(s, index - 1)

spell reverse(s):
    return reverse_string(s, len(s) - 1)

print("Reverse of 'hello': " + reverse("hello"))
print("String indexing works!")