// Test 1: Simple multi-statement function
spell add_and_multiply(x, y):
    sum = x + y
    product = sum * 2
    return product

print("Test 1: add_and_multiply(3, 4) =")
print(add_and_multiply(3, 4))  // Should print 14

// Test 2: Recursive factorial
spell factorial(n):
    if n <= 1:
        return 1
    result = n * factorial(n - 1)
    return result

print("Test 2: factorial(5) =")
print(factorial(5))  // Should print 120

// Test 3: Multiple parameters with complex logic
spell process(a, b, c):
    first = a + b
    second = b + c
    third = first * second
    return third - a

print("Test 3: process(2, 3, 4) =")
print(process(2, 3, 4))  // Should print 33

// Test 4: Nested function calls
spell double(x):
    result = x * 2
    return result

spell triple(x):
    doubled = double(x)
    result = doubled + x
    return result

print("Test 4: triple(5) =")
print(triple(5))  // Should print 15

print("All tests completed successfully!")