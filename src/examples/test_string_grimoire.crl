// Test the String grimoire functionality
s = String("Hello World")

print("Original: " + s.value)
print("Length: " + str(s.length()))
print("Upper: " + s.upper())
print("Lower: " + s.lower())
print("Reverse: " + s.reverse())
print("Contains 'World': " + str(s.contains("World")))
print("Contains 'xyz': " + str(s.contains("xyz")))
print("Find 'World': " + str(s.find("World")))
print("Find 'xyz': " + str(s.find("xyz")))
print("Char at 6: " + str(s.char_at(6)))
print("Char at -1: " + str(s.char_at(-1)))

print("String grimoire works!")